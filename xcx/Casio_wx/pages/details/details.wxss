  width:100%;
  height:500rpx;
}
.product-price{
  padding-left:15rpx;
  padding-top:20rpx;
  color: red;
}
.product-title{
   padding-left:15rpx;
   font-size:16px
}
.select-color{
  display: flex;
  margin-top:10rpx;
}
.select-color view:first-child{
  padding-left: 15rpx;
  font-size: 16px;
 
}
.product-color{
  display: flex;
  flex-direction: column
}
.prduct-count{
  display: flex
}
.prduct-count{
  margin-top:20rpx;
}
.mybutton{
  margin-left: 10rpx;
}
.mybutton button{
  line-height:28px;
  padding-left: 10px;
  width:28px;
  height:28px;
}
.mybutton input{
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  width:30px;
  text-align: center
}


.mybutton{
  display: flex
}
.footer-fixed{
  display: flex;
  position: fixed;
  bottom: 0;
  width:100%;
  height:50px;
}
.footer-fixed image{
  width:30px;
  height:30px;
}
.footer-item{
  display: flex;
  width:30%;
}
.footer-item text{
  font-size: 12px
}
.footer-item view{
  text-align: center
}
.footer-item .footer-item-item{
  width:50%;
  height:50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.addcart,.linkShop{
  width:40%;
  text-align: center;
  height:50px;
  line-height: 50px;
  color: #fff
}
.addcart{
  background: #f8ab0a;
 
}
.linkShop{
  background: #f61f04
}
